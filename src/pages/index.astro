					<Hero
						title="Kengo Hoi"
						tagline="Welcome to my portfolio!"
						align="center"
					>
					</Hero>
				</header>
			</div>

			<!-- ========= ABOUT ========= -->
			<section id="about" class="section-space">
				<div class="wrapper stack gap-12 lg:gap-10">

